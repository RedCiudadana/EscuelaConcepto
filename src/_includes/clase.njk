---
tags:
  - {{title}} 
  - clases
---
{% extends "src/base.njk" %}

{% block head %}
<title>Escuela - Contacto</title>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
{% endblock %}

{% block content %}

            <div class="nicdark_section" >

                <!--start nicdark_container-->
                <div class="nicdark_container nicdark_clearfix wrapper">

                    <!-- SIDEBAR -->
                    <nav id="sidebar" style="padding-left:70px;">
                        <div class="sidebar-header">
                            <h3 class="text-white">{{ course }}</h3>
                            {%- for _course in collections.course -%}
                            {% if _course.data.title == course %}
                            <div class="nicdark_section nicdark_height_30"></div>
                            <a href="{{ _course.url }}" class="btn_black">
                                Regresar al curso
                            </a>
                            {% endif %}
                            {%- endfor -%}
                        </div>

                        <ul class="list-unstyled components" style="padding-left:20px">
                            
                            <li class="active">
                                <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle" style="color:#fff!important">Clases</a>
                                <ul class="collapse list-unstyled scrollbar" id="homeSubmenu">
                                    {% set currentclass = collections.class | getCollectionItem(page) %}
                                    {%- for class in collections.class -%}
                                    {% if class.data.course == course %}
                                    <li>
                                        <a class="linksside {% if class.url == currentclass.url %} linkssideactive {% endif %}" href="{{ class.url}}"><span class=" nicdark_text_align_left">{{ class.data.title }}</span></a>
                                    </li>                                     
                                    {% endif %}
                                    {%- endfor -%}
                                </ul>
                            </li>
                            
                        </ul>

                    </nav>

                    <!-- CONTENT -->
                    <div id="content" style="justify-content:center; display:flex">
                        <div class="col-md-9 col-lg-9 col-sm-11">

                            <div class="nicdark_section nicdark_padding_15 nicdark_box_sizing_border_box">

                                <h1>{{ title }}</h1>

                                <!-- TEACHER -->
                                <div class="nicdark_width_25_percentage nicdark_width_50_percentage_all_iphone nicdark_float_left"
                                    style="display: none;">
                                    <div class="nicdark_display_table nicdark_float_left">

                                        <div class="nicdark_display_table_cell nicdark_vertical_align_middle">
                                            <img alt="" class="nicdark_margin_right_10 nicdark_border_radius_100_percentage"
                                                width="40" src="/img/avatar/avatar-chef-1.png">
                                        </div>

                                        <div class="nicdark_display_table_cell nicdark_vertical_align_middle">
                                            <p class="nicdark_font_size_13">Teacher</p>
                                            <div class="nicdark_section nicdark_height_5"></div>
                                            <h5 class="">John Doe</h5>
                                        </div>

                                    </div>
                                </div>
                                <!-- CATEGORY -->
                                <div class="nicdark_width_25_percentage nicdark_width_50_percentage_all_iphone nicdark_float_left"
                                    style="display: none;">

                                    <div class="nicdark_section nicdark_height_5"></div>
                                    <div class="nicdark_display_table nicdark_float_left">

                                        <div class="nicdark_display_table_cell nicdark_vertical_align_middle">
                                            <img alt="" class="nicdark_margin_right_10" width="30"
                                                src="/img/icons/icon-category-grey.svg">
                                        </div>

                                        <div class="nicdark_display_table_cell nicdark_vertical_align_middle">
                                            <p class="nicdark_font_size_13">Category</p>
                                            <div class="nicdark_section nicdark_height_5"></div>
                                            <h5 class="">Fish Cursos</h5>
                                        </div>

                                    </div>
                                </div>
                                <!-- PRINT -->
                                <div class="nicdark_width_50_percentage nicdark_display_none_all_iphone nicdark_float_right"
                                    style="display: none;">

                                    <div class="nicdark_section nicdark_height_5"></div>
                                    <div class="nicdark_section nicdark_height_5"></div>

                                    <div class="nicdark_display_table nicdark_float_right">
                                        <a href="#"><img alt="" class="" width="30"
                                                src="/img/icons/icon-print-grey.svg"></a>
                                    </div>
                                </div>
                                <!-- BOOKMARK AND COMPARE -->
                                <div class="nicdark_section nicdark_position_relative" style="display: none;">

                                    <img alt="" class="nicdark_section" src="/img/Cursos/img1.png">

                                    <div
                                        class="nicdark_bg_greydark_alpha_gradient nicdark_position_absolute nicdark_left_0 nicdark_height_100_percentage nicdark_width_100_percentage nicdark_padding_20 nicdark_box_sizing_border_box">
                                        <div class="nicdark_position_absolute nicdark_bottom_20">

                                            <a class="nicdark_display_inline_block nicdark_font_size_13 nicdark_color_white nicdark_border_1_solid_white nicdark_first_font nicdark_padding_8 nicdark_border_radius_3 nicdark_margin_right_20"
                                                href="account.html#tabs-3">BOOKMARK</a>
                                            <a class="nicdark_display_inline_block nicdark_font_size_13 nicdark_color_white nicdark_border_1_solid_white nicdark_first_font nicdark_padding_8 nicdark_border_radius_3 "
                                                href="compare.html">COMPARE</a>

                                        </div>

                                    </div>

                                </div>

                                <div class="nicdark_section">
                                    <!--START tab-->
                                    <div class="nicdark_tabs">
                                        <div class="nicdark_section nicdark_height_40"></div>
                                        <div class="nicdark_section contenido" id="tabs-1">
                                            <div class="nicdark_section nicdark_height_20"></div>
                                            <p>
                                                {{ content | safe }}
                                            </p>
                                            <div class="nicdark_section nicdark_height_20"></div>

                                            <!--start tag>
                                            <div class="nicdark_section" style="display: none;">
                                                <a class="nicdark_display_inline_block nicdark_padding_8 nicdark_first_font nicdark_margin_right_10 nicdark_color_greydark nicdark_padding_left_0"
                                                    href="#">Tag :</a>
                                                <a class="nicdark_display_inline_block nicdark_font_size_13 nicdark_border_1_solid_grey nicdark_padding_8 nicdark_border_radius_3 nicdark_margin_10"
                                                    href="#"># Vegan Food</a>
                                                <a class="nicdark_display_inline_block nicdark_font_size_13 nicdark_border_1_solid_grey nicdark_padding_8 nicdark_border_radius_3 nicdark_margin_10"
                                                    href="#"># Recipies</a>
                                                <a class="nicdark_display_inline_block nicdark_font_size_13 nicdark_border_1_solid_grey nicdark_padding_8 nicdark_border_radius_3 nicdark_margin_10"
                                                    href="#">Vegetarian</a>
                                                <a class="nicdark_display_inline_block nicdark_font_size_13 nicdark_border_1_solid_grey nicdark_padding_8 nicdark_border_radius_3 nicdark_margin_10"
                                                    href="#">Fruit</a>
                                                <a class="nicdark_display_inline_block nicdark_font_size_13 nicdark_border_1_solid_grey nicdark_padding_8 nicdark_border_radius_3 nicdark_margin_10"
                                                    href="#"># Italian Food</a>
                                                <a class="nicdark_display_inline_block nicdark_font_size_13 nicdark_border_1_solid_grey nicdark_padding_8 nicdark_border_radius_3 nicdark_margin_10"
                                                    href="#"># Pizza</a>
                                                <a class="nicdark_display_inline_block nicdark_font_size_13 nicdark_border_1_solid_grey nicdark_padding_8 nicdark_border_radius_3 nicdark_margin_10"
                                                    href="#">Lasagne</a>
                                            </div>
                                            

                                            <div class="nicdark_section nicdark_height_30"></div>

                                            
                                            <div class="nicdark_section" style="display: none;">
                                                <a href="#"><img alt="" width="40" class="nicdark_margin_right_10"
                                                        src="/img/icons/icon-facebook-color.svg"></a>
                                                <a href="#"><img alt="" width="40" class="nicdark_margin_right_10"
                                                        src="/img/icons/icon-twitter-color.svg"></a>
                                                <a href="#"><img alt="" width="40" class="nicdark_margin_right_10"
                                                        src="/img/icons/icon-pinterest-color.svg"></a>
                                                <a href="#"><img alt="" width="40" class="nicdark_margin_right_10"
                                                        src="/img/icons/icon-linkedin-color.svg"></a>
                                                <a href="#"><img alt="" width="40" class="nicdark_margin_right_10"
                                                        src="/img/icons/icon-google-color.svg"></a>
                                                <a href="#"><img alt="" width="40" class="nicdark_margin_right_10"
                                                        src="/img/icons/icon-mail-color.svg"></a>
                                            </div>
                                            <end-->
                                        </div>
                                        
                                        {% set currentclass = collections.class | getCollectionItem(page) %}
                                        {%- for class in collections[class.course] -%}
                                            <div>{{class.data.title}}</div>
                                        {%- endfor -%}

                                        <div>
                                            
                                            {% set previousClass = collections.class | getPreviousCollectionItem(page) %}
                                            {% if previousClass %}
                                                <a href="{{previousClass.url}} "><button type="button" class="btn button-new2">
                                                <i class="fas fa-arrow-left"></i>
                                                <span> Anterior </span>
                                                </button></a>
                                            {% endif %}
                                            
                                            <button type="button" id="sidebarCollapse" class="btn button-new2">
                                                <i class="fas fa-align-left"></i>
                                                <span>Listado de clases</span>
                                            </button>
                                            
                                            {% set nextClass = collections.class | getNextCollectionItem(page) %}
                                            {% if nextClass %}
                                                <a href="{{nextClass.url}} ">
                                                <button type="button" class="btn button-new2">                                    
                                                <span>Siguiente</span>
                                                <i class="fas fa-arrow-right"></i>
                                                </button></a>
                                            {% endif %}
                                        </div>
                                    </div>
                                     
                                    <!--END tab-->
                                </div>

                               
                            </div>
                        </div>
                    </div>

                    



                </div>
                <!--end container-->

            </div>

            
{% endblock %}

{% block body_javascripts %}
    
    <!--js-->
    <script src="js/nicdark_plugins.js" type="text/javascript"></script>

     <!-- jQuery CDN - Slim version (=without AJAX) -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <!-- Popper.JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>

    
    <script type="text/javascript">
    
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    
    </script>

{% endblock %}