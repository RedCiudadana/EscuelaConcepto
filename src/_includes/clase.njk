tags:
  - {{title}} 
  - clases
---
{% extends "src/base.njk" %}

{% block head %}
<title>Escuela - Contacto</title>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
{% endblock %}

{% block content %}

            <div class="offcanvas offcanvas-start " tabindex="-1" id="offcanvas" data-bs-keyboard="false" data-bs-backdrop="false" style="background-color:#00AE8C">
                <div class="offcanvas-header">
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <div class="sidebar-header">
                        <h3 class="text-white">{{ course }}</h3>
                        {%- for _course in collections.course -%}
                        {% if _course.data.title == course %}
                        <div class="nicdark_section nicdark_height_30"></div>
                        <a href="{{ _course.url }}" class="btn_black">
                            Regresar al curso
                        </a>
                        {% endif %}
                        {%- endfor -%}
                    </div>
                    <ul class="side-links nav nav-pills flex-column mb-sm-auto mb-0 align-items-start" id="menu">
                        {% set currentclass = collections.class | getCollectionItem(page) %}
                        {# {%- for class in collections.class -%}
                        {% if class.data.course == course %}
                        <li>
                            <a class="linksside {% if class.url == currentclass.url %} linkssideactive {% endif %}" href="{{ class.url}}"><span class=" nicdark_text_align_left">{{ class.data.title }}</span></a>
                        </li>                                     
                        {% endif %}
                        {%- endfor -%} #}

                        {% set currentclass = collections.class | getCollectionItem(page) %}
                        {%- for class in collections[course] -%}
                        <li class="linksside {% if class.url == currentclass.url %} linkssideactive {% endif %}">
                            <a class="no_dec" href="{{ class.url}}"><span class=" nicdark_text_align_left">{{ class.data.title }}</span></a>
                        </li>                                   
                        {%- endfor -%}
                    </ul>
                    
                </div>
            </div>

            <div class="nicdark_section" >

                <!--start nicdark_container-->
                <div class="nicdark_container nicdark_clearfix wrapper">
                    <!-- CONTENT -->
                    <div id="content" style="justify-content:center; display:flex">
                        <div class="col-md-9 col-lg-9 col-sm-11">

                            <div class="nicdark_section nicdark_padding_15 nicdark_box_sizing_border_box">
                                <div class="curso_titulo">Curso: {{course}}</div>

                                {% set currentclass = collections[course] | getCollectionItem(page) %}

                                <div>
                                    
                                    {% set previousClass = collections[course] | getPreviousCollectionItem(page) %}
                                    {% if previousClass %}
                                        <a href="{{previousClass.url}} "><button type="button" class="btn button-new2">
                                        <i class="fas fa-arrow-left"></i>
                                        <span> Anterior </span>
                                        </button></a>
                                    {% endif %}

                                    <!-- toggler -->
                                    <button class="sidebarCollapse btn button-new2" data-bs-toggle="offcanvas" data-bs-target="#offcanvas" role="button">
                                        <i class="fas fa-align-left"  data-bs-toggle="offcanvas" data-bs-target="#offcanvas"></i>
                                        <span>Listado de clases</span>
                                    </button>
                                    
                                    {% set nextClass = collections[course] | getNextCollectionItem(page) %}
                                    {% if nextClass %}
                                        <a href="{{nextClass.url}} ">
                                        <button type="button" class="btn button-new2">                                    
                                        <span>Siguiente</span>
                                        <i class="fas fa-arrow-right"></i>
                                        </button></a>
                                    {% endif %}
                                </div>

                                <div class="nicdark_section nicdark_height_50"></div>

                                <h1>{{ title }}</h1>

                                <div class="nicdark_section">
                                    <!--START tab-->
                                    <div class="nicdark_tabs">
                                        <div class="nicdark_section nicdark_height_40"></div>
                                        <div class="nicdark_section contenido" id="tabs-1">
                                            <div class="nicdark_section nicdark_height_20"></div>
                                            <p>
                                                {{ content | safe }}
                                            </p>
                                            <div class="nicdark_section nicdark_height_20"></div>

                                        
                                        </div>
                                        
                                        {% set currentclass = collections[course] | getCollectionItem(page) %}

                                        <div>
                                            
                                            {% set previousClass = collections[course] | getPreviousCollectionItem(page) %}
                                            {% if previousClass %}
                                                <a href="{{previousClass.url}} "><button type="button" class="btn button-new2">
                                                <i class="fas fa-arrow-left"></i>
                                                <span> Anterior </span>
                                                </button></a>
                                            {% endif %}
                                            
                                            <!-- toggler -->
                                            <button class="sidebarCollapse btn button-new2" data-bs-toggle="offcanvas" data-bs-target="#offcanvas" role="button">
                                                <i class="fas fa-align-left"  data-bs-toggle="offcanvas" data-bs-target="#offcanvas"></i>
                                                <span>Listado de clases</span>
                                            </button>
                                            
                                            {% set nextClass = collections[course] | getNextCollectionItem(page) %}
                                            {% if nextClass %}
                                                <a href="{{nextClass.url}} ">
                                                <button type="button" class="btn button-new2">                                    
                                                <span>Siguiente</span>
                                                <i class="fas fa-arrow-right"></i>
                                                </button></a>
                                            {% endif %}
                                        </div>
                                    </div>
                                     
                                    <!--END tab-->
                                </div>

                               
                            </div>
                        </div>
                    </div>

                    



                </div>
                <!--end container-->

            </div>

            
{% endblock %}

{% block body_javascripts %}
    
    <!--js-->
    <script src="js/nicdark_plugins.js" type="text/javascript"></script>

     <!-- jQuery CDN - Slim version (=without AJAX) -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <!-- Popper.JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>


{% endblock %}